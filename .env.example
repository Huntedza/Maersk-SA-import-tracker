# SA Inbound Tracker - Environment Variables Template
# Copy this file to .env and fill in your actual values

# Maersk API Configuration
REACT_APP_MAERSK_API_KEY=your_maersk_api_key_here

# Application Configuration
REACT_APP_USE_MOCK_DATA=false
REACT_APP_LOG_API_REQUESTS=false

# Node Environment
NODE_ENV=development

# Backend Server Configuration (for production deployment)
PORT=3002

# Optional: Enable development features
# REACT_APP_DEBUG_MODE=true

# Instructions:
# 1. Get a Maersk API key from: https://developer.maersk.com/
# 2. Replace 'your_maersk_api_key_here' with your actual API key
# 3. Set REACT_APP_USE_MOCK_DATA=true for development without API access
# 4. Set REACT_APP_LOG_API_REQUESTS=true to debug API calls
# 5. For production, set NODE_ENV=production
